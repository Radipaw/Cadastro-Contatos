@model List<ContatosModel>
@{
    ViewData["Title"] = "Lista de contatos";
}

<div class="text-center">
    <h1 class="display-4">Contatos</h1>
    <p>Bem vindo à lista de contatos</p>
</div>
<div>
    <a type="button" class="btn btn-primary btn-lg" asp-controller="Contatos" asp-action="Criar">Criar Contato</a>
</div>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @if (Model != null && Model.Any())
            {
                foreach(ContatosModel contato in Model)
                {
                    <tr>
                        <td>@contato.Nome</td>
                        <td>@contato.Telefone</td>
                        <td>@contato.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-route-id="@contato.Id" asp-controller="Contatos" asp-action="Editar"class="btn btn-primary">Editar</a>
                                <a role="button" asp-route-id="@contato.Id" asp-controller="Contatos" asp-action="DeletarConfirmacao" class="btn btn-danger">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
}
        </tbody>
    </table>
</div>
