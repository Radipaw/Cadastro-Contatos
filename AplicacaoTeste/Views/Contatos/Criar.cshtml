@{
    ViewData["Title"] = "Criar Contato";
}


<div class="text-center">
    <h1 class="display-4">Criar contato!</h1>
</div>
<form>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do Contato">
    </div>
    <div class="mb-3">
        <label for="telefone" class="form-label">Telefone</label>
        <input type="text" class="form-control" placeholder="Digite o telefone do Contato">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" placeholder="Digite o email do Contato">
    </div>
    <div class="btn-group-lg" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-primary">Criar</button>
        <button type="button" class="btn btn-secondary ">Voltar</button>
    </div>
</form>